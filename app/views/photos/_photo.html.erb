 <div class ="row mb-3">
    <div class= "col-md-6 offset-md-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
              <%=link_to photo.owner.username , user_path(photo.owner.username), class: "link-secondary" %>
          </h5>
         </div>
        <%= image_tag photo.image, class:"card-img-top" %>
        
        <div class="card-body">  
          <p class="card-text"><%= photo.caption %></p>
        </div>



        <ul class="list-group list-group-flush">
          <% photo.comments.each do |comment| %>
            <li class="list-group-item">
              <div class="d-flex">
                <div class="flex-shrink-0">
                  <img src="..." alt="...">
                </div>
                <div class="flex-grow-1 ms-3">
                  <h5 class="mt-0">
                    <%=link_to comment.author.username , user_path(comment.author.username), class: "link-secondary" %>
                  </h5>
                  <p> <%= comment.body %> </p>
                </div>
              </div> 
            </li>
          <% end %>
        </ul>

        <div class="card-body">
          <%= render "comments/form", comment: photo.comments.build %>
          <a href="#" class="card-link">Card link</a>
          <a href="#" class="card-link">Another link</a>
        </div>

      </div>
    </div>
  </div>
