<div class="d-flex">
  <div class="flex-shrink-0">
    <img class="mr-3 rounded-circle" width="128" src=<%=@user.avatar %> alt="...">
  </div>
  
  <div class="flex-grow-1 ms-3">
    <div class="d-flex justify-content-between">
      <h1>
      <%= @user.username %>
      </h1>

      <% if @user.private? %>
        <h6><span class="badge bg-secondary">Private</span></h6>
      <% end%>
    </div>
    
    <div class="d-flex justify-content-between">
      <div class="col"> <%=@user.followers.count %> Followers </div>
      <div class="col"> <%=@user.leaders.count %> Following </div>
      <div class="col"> <%=@user.received_follow_requests.pending.count %> Pending </div>
    </div>
   
    <div class="d-grid gap-2">
      Follow Button
    </div>
      
     
    <h3> <%=@user.name %> </h3>

    <p> <%=@user.bio %> </p>

    <%=link_to @user.website , @user.website, class: "nav-link active" %>
    
  
  </div>

  
  


</div>


<ul class="nav nav-tabs nav-fill">
  <li class="nav-item">
    <%=link_to "Posts" , user_path(@user.username), class: "nav-link active" %>
  </li>
  <li class="nav-item">
    <%=link_to "Likes" , liked_photos_path(@user.username), class: "nav-link active" %>
    </li>
</ul>
