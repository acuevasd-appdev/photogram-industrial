<div class="row">
  <div class="col-md-6 offset-md-3">

    <div class="d-flex">
    <div class="flex-shrink-0">
      <img class="mr-3 rounded-circle" width="128" src=<%=@user.avatar %> alt="...">
    </div>
    <div class="flex-grow-1 ms-3">
      <h1>
        <%= @user.username %>
      </h1>

      <% if @user.private? %>
        <h6><span class="badge bg-secondary">Private</span></h6>
      <% end%>

      <p> <%=@user.followers.count %> Followers </p>
      <# %=render "users/modal" %>
      <p> <%=@user.leaders.count %> Following </p>
      <p> <%=@user.received_follow_requests.pending.count %> Pending </p>

      <#% if current_user@user.accepted_sent_follow_requests %>
        <div class="d-grid gap-2">
          <button type="button" class="btn btn-outline-secondary">Follow</button>
        </div>
      <#% end%>
      <h3> <%=@user.name %> </h3>

      <p> <%=@user.bio %> </p>

      <%=link_to @user.website , @user.website, class: "nav-link active" %>

    </div>
  </div>


    
  </div>
</div>

<div class="row">
  <div class="col-md-6 offset-md-3 mb-3">
    <ul class="nav nav-tabs nav-fill">
      <li class="nav-item">
        <%=link_to "Posts" , user_path(@user.username), class: "nav-link active" %>
      </li>
      <li class="nav-item">
        <%=link_to "Likes" , liked_photos_path(@user.username), class: "nav-link active" %>
      </li>
    </ul>

  </div>
</div>
